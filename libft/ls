#include <math.h>

float     pythagoras(float a, float b, float c)
{
    if (a == 0 || b == 0)
    {
        if (b == 0 && a == 0)
            return (-1);
        if (b != 0 && a == 0)
        {
            a = b;
            b = 0;
        }
        if (c != 0)
            return(sqrt((c * c) - (a * a)));
    }
    if (c == 0 && a != 0 && b != 0)
        return(sqrt((a * a) + (b * b)));
    return(-1);
}
